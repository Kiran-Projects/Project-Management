<div id="projects" class="row mt-4">
  <% @projects.each do |project| %>
    <%= link_to project, class: "btn btn-#{project_status_class(project)} col-md-5 text-start my-2 me-auto" do %>
      <%= project.name %>
      &nbsp;&nbsp;
      <span class="fw-lighter fs-6">
        (<%= project.status.titleize %>)
      </span>
    <% end %>
  <% end %>
</div>