<h3><%= project.name %></h3>
<div class="accordion" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
        Details
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div id="<%= dom_id project %>">
          <table class="table table-light table-bordered table-hover">
            <colgroup>
              <col style="width: 20%">
              <col style="width: auto">
            </colgroup>

            <tr>
              <td>Location:</td>
              <td><%= project.location %></td>
            </tr>

            <tr>
              <td>Client:</td>
              <td><%= link_to project.client_name, project.client, class: 'text-dark' %></td>
            </tr>

            <tr>
              <td>Start date:</td>
              <td><%= project.start_date.localtime.strftime('%b %d, %Y') %></td>
            </tr>

            <tr>
              <td>Deadline:</td>
              <td><%= project.deadline || 'N/A' %></td>
            </tr>

            <tr>
              <td>Status:</td>
              <td><%= project.status %></td>
            </tr>

            <tr>
              <td>Manager name:</td>
              <td><%= project.manager_name || 'N/A' %></td>
            </tr>

            <tr>
              <td>Contract Amount:</td>
              <td>NRs. <%= project.contract_amount %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
        Work Parties
      </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse show" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <% if project.work_parties.blank? %>
          <p class="text-secondary text-center">No any work parties assigned!</p>
        <% else %>
          <table class="table table-light table-bordered table-hover text-capitalize">
            <thead>
            <tr>
              <th>Work Type</th>
              <th>Work Party</th>
              <th>Bill Amount</th>
              <th>Bill Status</th>
              <th>Payment Status</th>
            </tr>
            </thead>
            <tbody>
            <% project.project_work_parties.saved_only.each do |pwp| %>
              <tr>
                <td><%= pwp.work_type_name %></td>
                <td><%= pwp.work_party_name %></td>
                <td><%= pwp.bill_amount %></td>
                <td><%= pwp.bill_status %></td>
                <td><%= pwp.payment_status %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>

