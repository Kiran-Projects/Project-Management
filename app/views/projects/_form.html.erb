<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h3><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h3>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :name, value: @project&.name || 'New Project', class: 'form-control' %>
  <table class="table table-light table-borderless">
    <colgroup>
      <col style="width: 20%">
      <col style="width: auto">
    </colgroup>

    <tr>
      <td><%= form.label :location, class: 'form-label' %></td>
      <td><%= form.text_field :location, class: 'form-control' %></td>
    </tr>

    <tr>
      <td><%= form.label :client_id, class: "form-label" %></td>
      <td><%= form.select :client_id, client_list, {prompt: 'Choose Client'}, {class: 'form-select'} %></td>
    </tr>

    <tr>
      <td><%= form.label :start_date, class: 'form-label' %></td>
      <td><%= form.date_field :start_date, class: 'form-control' %></td>
    </tr>

    <tr>
      <td><%= form.label :deadline, class: 'form-label' %></td>
      <td><%= form.date_field :deadline, class: 'form-control' %></td>
    </tr>

    <tr>
      <td><%= form.label :status, class: 'form-label' %></td>
      <td><%= form.select :status, project_statuses, {}, {class: 'form-select'} %></td>
    </tr>

    <tr>
      <td><%= form.label :manager_name, class: 'form-label' %></td>
      <td><%= form.text_field :manager_name, class: 'form-control' %></td>
    </tr>
  </table>

  <div>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
