<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-dark table-borderless">
    <tr>
      <td><%= form.label :name, class: 'form-label' %></td>
      <td><%= form.text_field :name, placeholder: :name, class: 'form-control' %></td>
    </tr>

    <tr>
      <td><%= form.label :title, class: 'form-label' %></td>
      <td><%= form.text_field :title, placeholder: :title_or_designation, class: 'form-control' %></td>
    </tr>

    <tr>
      <td><%= form.label :phone, class: 'form-label' %></td>
      <td><%= form.text_field :phone, placeholder: :phone, class: 'form-control' %>
        <i class="text-secondary">* Separate numbers by comma if multiple</i>
      </td>
    </tr>

    <tr>
      <td><%= form.label :contact_type, class: 'form-label' %></td>
      <td><%= form.select :contact_type, contact_types, {prompt: 'Choose Contact Type'}, {class: 'form-select'} %></td>
    </tr>

    <tr>
      <td><%= form.label :client_id, class: 'form-label' %></td>
      <td><%= form.select :client_id, client_list, {prompt: 'Choose Client'}, {class: 'form-select'} %></td>
    </tr>
  </table>

  <div class="mt-4">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
